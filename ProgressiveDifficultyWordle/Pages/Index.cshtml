                        <input type="radio" id="gameTypeScoreSelector3" name="gameType" value="scaling">
                        <label for="gameTypeScoreSelector3">Scaling</label>
                    </div>
                </form>
                <div id="singleScoreHistory">
                    <div id="highLevelSingleStats" class="singleStatsContainer baseFlex flexRow">
                        <div class="baseFlex flexCol">
                            <span id="singleRoundsPlayedText" class="statsDesc">5</span>
                            <span class="statsDesc small">Played</span>
                        </div>
                        <div class="baseFlex flexCol">
                            <span id="successfulRoundsText" class="statsDesc">4</span>
                            <span class="statsDesc small">Solved</span>
                        </div>
                        <div class="baseFlex flexCol">
                            <span id="failedRoundsText" class="statsDesc">1</span>
                            <span class="statsDesc small">Lost</span>
                        </div>
                        <div class="baseFlex flexCol">
                            <span id="streakText" class="statsDesc">4</span>
                            <span class="statsDesc small">Streak</span>
                        </div>
                    </div>
                    <div class="baseFlex">
                        <span class="statsDesc">Guess Distribution</span>
                    </div>
                    <div id="guessCountDistribution">
                        @for (var i = 1; i <= 6; i++)
                        {
                        <div id=@($"{i}guessCountContainer") class="guessCountBarContainer baseFlex flexRow">
                            <div>@(i)</div>
                            <div id=@($"{i}guessCountBar") class="guessCountBar"></div>
                        </div>
                        } 
                    </div>
                </div>
                <div id="endlessScoreHistory" class="hidden">
                    <div id="noScoresWarning" class="baseFlex hidden">
                        <span class="statsDesc">No Scores Recorded</span>
                    </div>
                    <table class="scoreBoard">
                        <tr>
                            <th>
                                Date
                            </th>
                            <th>
                                Rounds
                            </th>
                            <th>
                                Score
                            </th>
                        </tr>
                        @for (var i = 0; i < 10; i++)
                        {
